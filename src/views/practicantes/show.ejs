<%- include('../partials/header') %>

<div class="container-fluid">
    <div class="row">

        <!-- Sidebar -->
        <div class="col-12 col-md-3 col-lg-2 p-0">
            <%- include('../partials/sidebar') %>
        </div>

        <!-- Encabezado Compacto -->
        <%- include('../partials/headerCompacto', { 
            icono: 'fas fa-info-circle', 
            titulo: 'Detalles del Practicante', 
            subtitulo: 'Consulta la información del practicante seleccionado' 
        }) %>

        <!-- Contenido principal -->
        <main class="col-12 col-md-9 col-lg-10 ms-sm-auto px-4 py-4">
            <h2>Detalles del Practicante</h2>

            <ul class="list-group">
                <li class="list-group-item"><strong>Nombre:</strong> <%= practicante.nombre_practicante %></li>
                <li class="list-group-item"><strong>Correo:</strong> <%= practicante.correo %></li>
                <li class="list-group-item"><strong>Teléfono:</strong> <%= practicante.telefono %></li>
                <li class="list-group-item"><strong>Carrera:</strong> <%= practicante.carrera ? practicante.carrera.nombre_carrera : 'N/A' %></li>
                <li class="list-group-item"><strong>Fecha de inicio:</strong> <%= practicante.fecha_inicio.toISOString().split('T')[0] %></li>
            </ul>

            <a href="/practicantes/edit/<%= practicante.id_practicante %>" class="btn btn-warning mt-3">Editar</a>
            <a href="/practicantes" class="btn btn-secondary mt-3">Volver a la lista</a>
        </main>

    </div>
</div>

<!-- Footer -->
<%- include('../partials/footer') %>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>