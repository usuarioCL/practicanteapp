<!DOCTYPE html>
<html lang="es" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <title>Detalles del Practicante</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Header -->
    <%- include('../partials/header') %>

    <div class="container-fluid">
        <div class="row">

            <!-- Sidebar -->
            <div class="col-12 col-md-3 col-lg-2 p-0">
                <%- include('../partials/sidebar') %>
            </div>

            <!-- Contenido principal -->
            <main class="col-12 col-md-9 col-lg-10 ms-sm-auto px-4 py-4">
                <h2>Detalles del Practicante</h2>

                <ul class="list-group">
                    <li class="list-group-item"><strong>Nombre:</strong> <%= practicante.nombre_practicante %></li>
                    <li class="list-group-item"><strong>Correo:</strong> <%= practicante.correo %></li>
                    <li class="list-group-item"><strong>Tel√©fono:</strong> <%= practicante.telefono %></li>
                    <li class="list-group-item"><strong>Carrera:</strong> <%= practicante.carrera ? practicante.carrera.nombre_carrera : 'N/A' %></li>
                    <li class="list-group-item"><strong>Fecha de inicio:</strong> <%= practicante.fecha_inicio.toISOString().split('T')[0] %></li>
                </ul>

                <a href="/practicantes/edit/<%= practicante.id_practicante %>" class="btn btn-warning mt-3">Editar</a>
                <a href="/practicantes" class="btn btn-secondary mt-3">Volver a la lista</a>
            </main>

        </div>
    </div>

    <!-- Footer -->
    <%- include('../partials/footer') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
