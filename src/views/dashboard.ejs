<%- include('partials/header') %>

<div class="container-fluid min-vh-100">
  <div class="row flex-nowrap">
    <!-- Sidebar -->
    <div
      class="col-auto p-0 bg-light border-end collapse d-md-block"
      id="sidebarContent"
    >
      <%- include('./partials/sidebar') %>
    </div>

    <!-- Contenido principal -->
    <div class="col px-4">
      <main class="py-4">
        <!-- Encabezado -->
        <div class="mb-4">
          <h1 class="text-primary">Bienvenido al Dashboard</h1>
          <p class="text-muted">
            Hola, <strong><%= usuario.nombre %></strong>! Aquí puedes gestionar
            todas las funcionalidades del sistema.
          </p>
        </div>

        <!-- Tarjetas -->
        <div class="row g-4">
          <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0">
              <div class="card-body text-center">
                <i class="bi bi-people-fill text-primary display-4 mb-3"></i>
                <h5 class="card-title">Practicantes</h5>
                <p class="card-text">Gestiona los practicantes registrados.</p>
                <a href="/practicantes" class="btn btn-primary">Ir</a>
              </div>
            </div>
          </div>

          <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0">
              <div class="card-body text-center">
                <i
                  class="bi bi-calendar-check-fill text-success display-4 mb-3"
                ></i>
                <h5 class="card-title">Asistencias</h5>
                <p class="card-text">
                  Gestiona las asistencias de los practicantes.
                </p>
                <a href="/asistencias" class="btn btn-success">Ir</a>
              </div>
            </div>
          </div>

          <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0">
              <div class="card-body text-center">
                <i class="bi bi-folder-fill text-warning display-4 mb-3"></i>
                <h5 class="card-title">Evidencias</h5>
                <p class="card-text">
                  Gestiona las evidencias de los practicantes.
                </p>
                <a href="/evidencias" class="btn btn-warning">Ir</a>
              </div>
            </div>
          </div>

          <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0">
              <div class="card-body text-center">
                <i class="bi bi-bar-chart-fill text-info display-4 mb-3"></i>
                <h5 class="card-title">Reportes</h5>
                <p class="card-text">Genera reportes detallados.</p>
                <a href="/reportes" class="btn btn-info">Ir</a>
              </div>
            </div>
          </div>

          <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0">
              <div class="card-body text-center">
                <i class="bi bi-gear-fill text-secondary display-4 mb-3"></i>
                <h5 class="card-title">Configuración</h5>
                <p class="card-text">Ajusta las configuraciones del sistema.</p>
                <a href="/configuracion" class="btn btn-secondary">Ir</a>
              </div>
            </div>
          </div>

          <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0">
              <div class="card-body text-center">
                <i class="bi bi-person-fill text-danger display-4 mb-3"></i>
                <h5 class="card-title">Usuarios</h5>
                <p class="card-text">Gestiona los usuarios del sistema.</p>
                <a href="/usuarios" class="btn btn-danger">Ir</a>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
