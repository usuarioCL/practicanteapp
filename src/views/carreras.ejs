<%- include('./partials/header') %>

<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-auto p-0 bg-light border-end collapse d-md-block">
      <%- include('./partials/sidebar') %>
    </div>

    <!-- Encabezado Compacto -->
    <%- include('partials/headerCompacto', { 
      icono: 'fas fa-book', 
      titulo: 'Carreras', 
      subtitulo: 'Consulta y administra las carreras registradas',
      vista: 'carreras'	
    }) %>
    <!-- Contenido principal -->
    <div id="mainContent" class="col px-5">
      <main class="py-4">
         <!-- Filtros -->
    <div class="row mb-4 mt-1 align-items-center">
      <!-- Botones de vista -->
      <div class="col-auto mt-4 d-flex align-items-center gap-1">
        <button id="toggleView" class="btn btn-secondary" title="Vista de cuadrícula">
          <i class="fas fa-th-large"></i>
        </button>
        <button id="listView" class="btn btn-secondary" title="Vista de lista">
          <i class="fas fa-list"></i>
        </button>
      </div>
    
      <!-- Formulario de filtros -->
      <form action="/carreras" method="GET" class="col d-flex align-items-center flex-wrap gap-3">
        <!-- Filtro por nombre -->
        <div class="flex-grow-1">
          <label for="nombre" class="form-label mb-0">Nombre</label>
          <input type="text" name="nombre" id="nombre" class="form-control" placeholder="Buscar por nombre" value="<%= selectedNombre || '' %>">
        </div>
    
        <!-- Filtro por estado -->
        <div class="flex-grow-1">
          <label for="estado" class="form-label mb-0">Estado</label>
          <select name="estado" id="estado" class="form-select">
            <option value="">Todos</option>
            <option value="activo" <%= selectedEstado === 'activo' ? 'selected' : '' %>>Activo</option>
            <option value="inactivo" <%= selectedEstado === 'inactivo' ? 'selected' : '' %>>Inactivo</option>
          </select>
        </div>
    
        <!-- Botones de acción -->
        <div class="col-auto d-flex align-items-center mt-4 gap-2">
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-filter"></i> Aplicar Filtros
          </button>
          <a href="/carreras" class="btn btn-secondary">
            <i class="fas fa-redo"></i> Limpiar Filtros
          </a>
        </div>
    
        <!-- Botón para agregar carrera -->
        <div class="col-auto mt-4 ms-auto">
          <a href="/carreras/create" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Agregar Carrera
          </a>
        </div>
      </form>
    </div>
        <!-- Listado de carreras -->
        <div class="row g-4">
          <% if (carreras.length > 0) { %>
            <% carreras.forEach((carrera, index) => { %>
              <div class="col-12">
                <div class="card shadow-sm border-1">
                  <div class="row g-0">
                    <!-- Detalles de la carrera -->
                    <div class="col-md-10">
                      <div class="card-body">
                        <h5 class="card-title text-primary"><%= carrera.nombre %></h5>
                        <div class="text-muted small d-flex gap-3">
                          <small class="text-muted">
                            Creado: <%= new Date(carrera.creado_en).toLocaleDateString() %> 
                          </small>
                           <small>
                            <strong>|</strong>
                          </small>
                          <small class="text-muted">
                            Actualizado: <%= new Date(carrera.actualizado_en).toLocaleDateString() %>
                          </small>
                          <small>
                            <strong>|</strong>
                          </small>
                          <small class="text-muted">
                            Estado: 
                            <span class="badge <%= carrera.activo ? 'bg-success' : 'bg-danger' %>">
                              <%= carrera.activo ? 'Activo' : 'Inactivo' %>
                            </span>
                          </small>
                        </div>
                      </div>
                    </div>
                    <!-- Acciones -->
                    <div class="col-md-2 d-flex align-items-center justify-content-center">
                      <div class="d-flex gap-2">
                      <a
                        href="/carreras/mostrarestudiantes/<%= carrera.id %>"
                        class="btn btn-info btn-sm"
                        title="Ver Practicantes"
                      >
                        <i class="fas fa-users"></i>
                      </a>
                      <a
                        href="/carreras/edit/<%= carrera.id %>"
                        class="btn btn-warning btn-sm"
                        title="Editar"
                      >
                        <i class="fas fa-edit"></i>
                      </a>
                      <form
                        action="/carreras/delete/<%= carrera.id %>"
                        method="POST"
                        onsubmit="return confirmDeleteWithPassword(event, this);"
                      >
                        <button
                        type="submit"
                        class="btn btn-danger btn-sm"
                        title="Eliminar"
                        >
                        <i class="fas fa-trash-alt"></i>
                        </button>
                      </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% }); %>
          <% } else { %>
            <div class="col-12">
              <div class="alert alert-warning text-center" role="alert">
                No hay carreras registradas.
                <a href="/carreras/create" class="alert-link">Agrega una nueva carrera</a>.
              </div>
            </div>
          <% } %>
        </div>
      </main>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>