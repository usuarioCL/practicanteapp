<div id="encabezado" class="shadow-sm d-flex align-items-center justify-content-between header-consistent-height " >
  <!-- Ícono y título -->
  <div class="d-flex align-items-center">
    <i class="<%= icono %> fa-2x me-2"></i>
    <div>
      <h1 class="fw-bold mb-0 fs-4"><%= titulo %></h1>
      <p class="mb-0 small"><%= subtitulo %></p>
    </div>
  </div>

  <!-- Botón de configuración con menú desplegable -->
  <div class="dropdown">
    <button class="btn btn-light btn-sm dropdown-toggle" id="configButton" title="Configuración" data-bs-toggle="dropdown" aria-expanded="false">
      <i class="fas fa-cog fa-2x"></i>
    </button>
      <% const currentVista = typeof vista !== 'undefined' ? vista : 'general'; %>
      <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="configButton">
        <% if (currentVista === 'practicantes') { %>
          <li><a class="dropdown-item" href="/practicantes/create">Agregar Practicante</a></li>
        <% } else if (currentVista === 'carreras') { %>
          <li><a class="dropdown-item" href="/carreras/configuracion">Configurar Carreras</a></li>
          <li><a class="dropdown-item" href="/carreras/reportes">Generar Reportes</a></li>
        <% } else if (currentVista === 'dashboard') { %>
          <li><a class="dropdown-item" href="/dashboard/configuracion">Configurar Dashboard</a></li>
          <li><a class="dropdown-item" href="/dashboard/reportes">Generar Reportes</a></li>
        <% } else { %>
          <li><a class="dropdown-item" href="/configuracion/general">Configuración General</a></li>
        <% } %>
      </ul>
  </div>
</div>